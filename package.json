    "nodemon": "^2.0.0",
    "prettier": "^2.0.0",
    "prisma": "^5.0.0",
    "prisma-docs-generator": "^0.8.0",
    "prisma-erd-generator": "^1.0.0",
    "rimraf": "^5.0.0",
    "supertest": "^6.0.0",
    "swagger-jsdoc": "^6.0.0",
    "swagger-ui-express": "^4.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
