{
  "name": "world-class-authentication",
  "version": "1.0.0",
  "description": "A comprehensive, enterprise-grade authentication system built with Node.js, TypeScript, and modern security practices",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start:debug": "ts-node-dev --respawn --transpile-only --inspect src/server.ts",
    "start:prod": "npm run build && npm start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest-e2e.config.js",
    "lint": "eslint \"{src,tests}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,tests}/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "release": "npm run build && npm run test && npm run lint:check",
    "docker:build": "docker build -t auth-system .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docs:generate": "swagger-jsdoc -d docs/swagger.config.js src/api/routes/*.ts -o docs/swagger.json",
    "dev": "concurrently \"npm run start:dev\" \"npm run db:studio\"",
    "clean": "rimraf dist coverage .nyc_output",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "authentication",
    "security",
    "nodejs",
    "typescript",
    "express",
    "jwt",
    "oauth",
    "mfa",
    "passwordless"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "@sentry/node": "^9.22.0",
    "@sentry/profiling-node": "^9.22.0",
    "@simplewebauthn/browser": "^13.1.0",
    "@simplewebauthn/server": "^13.1.1",
    "@tsed/di": "^8.9.5",
    "@types/express-session": "^1.18.1",
    "argon2": "^0.43.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "crypto-js": "^4.2.0",
    "dompurify": "^3.2.6",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "memory-cache": "^0.2.0",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "node-2fa": "^2.0.3",
    "node-cache": "^5.1.2",
    "node-forge": "^1.3.1",
    "nodemailer": "^7.0.3",
    "oauth2-server": "^3.1.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "passport-oauth2": "^1.8.0",
    "pino": "^9.7.0",
    "qrcode": "^1.5.4",
    "rate-limiter-flexible": "^7.1.1",
    "redis": "^5.1.0",
    "samlp": "^7.1.1",
    "sendgrid": "^5.2.3",
    "speakeasy": "^2.0.0",
    "twilio": "^5.6.1",
    "uuid": "^11.1.0",
    "validator": "^13.15.0",
    "winston": "^3.17.0",
    "xss": "^1.0.15",
    "zod": "^3.25.20"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^3.0.0",
    "@types/compression": "^1.8.0",
    "@types/cors": "^2.8.18",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
