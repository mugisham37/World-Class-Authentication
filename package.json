    "prettier": "^3.5.3",
    "prisma": "^6.8.2",
    "prisma-docs-generator": "^0.8.0",
    "prisma-erd-generator": "^2.0.4",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
