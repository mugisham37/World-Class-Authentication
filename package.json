{
  "name": "world-class-authentication",
  "version": "1.0.0",
  "description": "A comprehensive, enterprise-grade authentication system built with Node.js, TypeScript, and modern security practices",
  "main": "dist/server.js",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start:debug": "ts-node-dev --respawn --transpile-only --inspect src/server.ts",
    "start:prod": "npm run build && npm start",
    
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest-e2e.config.js",
    
    "lint": "eslint \"{src,tests}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,tests}/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    
    "prepare": "husky install",
    "precommit": "lint-staged",
    "release": "npm run build && npm run test && npm run lint:check",
    
    "docker:build": "docker build -t auth-system .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    
    "docs:generate": "swagger-jsdoc -d docs/swagger.config.js src/api/routes/*.ts -o docs/swagger.json",
    "dev": "concurrently \"npm run start:dev\" \"npm run db:studio\"",
    
    "clean": "rimraf dist coverage .nyc_output",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "authentication",
    "security",
    "nodejs",
    "typescript",
    "express",
    "jwt",
    "oauth",
    "mfa",
    "passwordless"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "@sentry/node": "^7.0.0",
    "@sentry/profiling-node": "^1.0.0",
    "@simplewebauthn/browser": "^7.0.0",
    "@simplewebauthn/server": "^7.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "dompurify": "^3.0.0",
    "express": "^4.18.0",
    "express-rate-limit": "^6.0.0",
    "express-validator": "^7.0.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.0.0",
    "joi": "^17.0.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "memory-cache": "^0.2.0",
    "moment": "^2.29.0",
    "morgan": "^1.10.0",
    "node-2fa": "^2.0.0",
    "node-cache": "^5.0.0",
    "node-forge": "^1.0.0",
    "nodemailer": "^6.0.0",
    "oauth2-server": "^3.1.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "passport-oauth2": "^1.0.0",
    "pino": "^8.0.0",
    "qrcode": "^1.5.0",
    "redis": "^4.0.0",
    "samlp": "^7.0.0",
    "sendgrid": "^5.0.0",
    "speakeasy": "^2.0.0",
    "twilio": "^4.0.0",
    "uuid": "^9.0.0",
    "validator": "^13.0.0",
    "winston": "^3.0.0",
    "xss": "^1.0.0",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@types/bcryptjs": "^2.4.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/lodash": "^4.14.0",
    "@types/node": "^18.0.0",
    "@types/nodemailer": "^6.0.0",
    "@types/passport-jwt": "^3.0.0",
    "@types/passport-local": "^1.0.0",
    "@types/supertest": "^2.0.0",
    "@types/swagger-jsdoc": "^6.0.0",
    "@types/swagger-ui-express": "^4.0.0",
    "@types/uuid": "^9.0.0",
    "@types/validator": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
