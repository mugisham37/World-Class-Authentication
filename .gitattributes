# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly declare text files to be normalized
*.ts text eol=lf
*.js text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.prisma text eol=lf

# Environment files should use LF
*.env* text eol=lf

# Config files should use LF
.eslintrc* text eol=lf
.prettierrc* text eol=lf
.lintstagedrc* text eol=lf
tsconfig*.json text eol=lf
jest*.config.js text eol=lf
commitlint.config.js text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.ttf binary
*.woff binary
*.woff2 binary
*.eot binary
*.otf binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
